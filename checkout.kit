<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0 maximum-scale=1.0 user-scalable=0">
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="css/style.css">
	<title>Single Item</title>
</head>
	<body>
		<div class="wrapper">
			<main class="mainPage">
					<!-- @import "html/header.html" -->

					<!-- @import "html/header_menu.html" -->
				<div class="content">
					<!-- ! <NEW ARRIVALS>----------------------------------------------------------- -->
					<div class="newArrivals">
						<div class="container">
							<div class="newArrivals__row">
								<div class="newArrivals__title">New Arrivals</div>
								<!-- ! -->
								<div class="newArrivals__breadcrumbs">
									<ol class="breadcrumb">
										<li><a class="breadcrumb__link" href="index.html">Home</a></li>
										<li><a class="breadcrumb__link" href="#">Men</a></li>
										<li class="active">New Arrivals</li>
									</ol>
								</div>
								<!-- ! -->
							</div>
						</div>
					</div>
					<!-- ! </NEW ARRIVALS>----------------------------------------------------------- -->
					<!-- ! </ACCORDION>----------------------------------------------------------- -->
					<div class="container">
						<div class="accordion">
							<div class="trigger">
								<input type="checkbox" id="checkbox-1" name="checkbox-1"/>
								<label for="checkbox-1" class="checkbox">01.&ensp;Shipping Adress</label>
								<div class="content-accordion">
									<div class="content-accordion__row">
										<!-- ! -->
										<div class="content-accordion__left">
											<div class="accordion__left-row">
												<div class="check-guest">
													<div class="check-guest__row">
														<div class="check-guest__title">Check as a guest or register</div>
														<div class="check-guest__text">Register with us for future convenience</div>
														<div class="check-guest__radio">
															<input id="guest-radio" type="radio" name="radio-guest" id="radio-guest">
															<label for="guest-radio">checkout as guest</label>
														</div>
														<div class="register__radio">
															<input id="register-radio" type="radio" name="radio-guest" checked>
															<label for="register-radio">register</label>
														</div>
													</div>
												</div>
												<div class="register">
													<div class="register__row">
														<div class="register__title">register and save time!</div>
														<div class="register__text">Register with us for future convenience</div>
														<ul class="register__ul">
															<li class="register__list">
																<a href="#" class="register__link"><span>&raquo;</span>Fast and easy checkout</a>
															</li>
															<li class="register__list">
																<a href="#" class="register__link"><span>&raquo;</span>Easy access to your order history and status</a>
															</li>
														</ul>
													</div>
												</div>
												<div class="continue__btn">
													<a href="#" class="continue__link">Continue</a>
												</div>
												
												
											</div>
										</div>
										<!-- ! -->
										<div class="content-accordion__right">
											<div class="accordion__right-row">
												<div class="accordion__right-title">Already registed?</div>
												<div class="accordion__right-text">Please log in below</div>
												<div class="accordion__right-email">
													<label  for="email">EMAIL ADDRESS<sub>*</sub></label>
													<input id="right-email" type="email" name="email" id="email">
												</div>
												<div class="accordion__right-password">
													<label for="password">PASSWORD<sub>*</sub></label>
													<input id="right-password" type="password" name="password" id="password">
												</div>
												<p class="required-text">*Required Fileds</p>
												<div class="continue__btn log-in__btn">
													<a href="#" class="continue__link">Log in</a>
													<a href="#" class="forgot-text">Forgot Password ?</a>
												</div>
												
											</div>
										</div>
										<!-- ! -->
									</div>
								</div>
							</div>
						
							<div class="trigger">
								
							</div>
						
							<div class="trigger">
								
							</div>
						</div>
						
					</div>
					<!-- ! </ACCORDION>----------------------------------------------------------- -->

					<!-- @import "html/subscribe.html" -->

					<!-- @import "html/brand.html" -->

				</div>
				<!-- @import "html/footer.html" -->
			</main>
		</div>
		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
		<!-- Подключение jQuery -->
		<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
		<!-- Подключение файла JS скриптов -->
		<script src="js/bootstrap.min.js"></script>
		<script src="js/script.js"></script>
	</body>
<html>